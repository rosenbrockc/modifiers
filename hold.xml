  <item>
    <name>Hold MOD D</name>            
    <identifier>remap.modifier.holdmodt</identifier>
    <autogen>
      __HoldingKeyToKey__ 
      KeyCode::D, KeyCode::D,
      KeyCode::VK_NONE, KeyCode::VK_MODIFIER_MODOPD, 
    </autogen>
  </item>
  <item>
    <name>Hold MOD F</name>            
    <identifier>remap.modifier.holdmodf</identifier>
    <autogen>
      __HoldingKeyToKey__ 
      KeyCode::F, KeyCode::F,
      KeyCode::VK_NONE, KeyCode::VK_MODIFIER_MODOPF, 
    </autogen>
  </item>
  <item>
    <name>Hold MOD G</name>            
    <identifier>remap.modifier.holdmodg</identifier>
    <autogen>
      __HoldingKeyToKey__ 
      KeyCode::G, KeyCode::G,
      KeyCode::VK_NONE, KeyCode::VK_MODIFIER_MODOPG, 
    </autogen>
  </item>
  <item>
    <name>Hold MOD H</name>            
    <identifier>remap.modifier.holdmodh</identifier>
    <autogen>
      __HoldingKeyToKey__ 
      KeyCode::H, KeyCode::H,
      KeyCode::VK_NONE, KeyCode::VK_MODIFIER_MODOPH, 
    </autogen>
  </item>
  <item>
    <name>MOD G + H/T/N remaps to Copy/Cut/Paste</name>            
    <identifier>remap.modifier.modgcutcopy</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::K, ModifierFlag::MODOPG,
      KeyCode::B, ModifierFlag::COMMAND_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::J, ModifierFlag::MODOPG,
      KeyCode::I, ModifierFlag::COMMAND_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::L, ModifierFlag::MODOPG,
      KeyCode::DOT, ModifierFlag::COMMAND_L
    </autogen>
  </item>
  <item>
    <name>MOD G + R remaps to find/replace (Option-%)</name>            
    <identifier>remap.modifier.modgreplace</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::O, ModifierFlag::MODOPG,
      KeyCode::KEY_5, ModifierFlag::SHIFT_L, ModifierFlag::OPTION_L
    </autogen>
  </item>  
  <item>
    <name>MOD G + S remaps to comment code (Opt+;)</name>            
    <identifier>remap.modifier.modgcommentcode</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::SEMICOLON, ModifierFlag::MODOPG,
      KeyCode::Z, ModifierFlag::OPTION_L
    </autogen>
  </item>  
  <item>
    <name>MOD F + J/K remaps to Left/Right Cursor</name>            
    <identifier>remap.modifier.modfleftrightcursor</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::J, ModifierFlag::MODOPF,
      KeyCode::CURSOR_LEFT
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::K, ModifierFlag::MODOPF,
      KeyCode::CURSOR_RIGHT
    </autogen>
  </item>
  <item>
    <name>MOD D + J/K remaps to Left/Right Word</name>            
    <identifier>remap.modifier.moddleftrightword</identifier>
    <autogen>
      __KeyToKey__
      KeyCode::J, ModifierFlag::MODOPD,
      KeyCode::CURSOR_LEFT, ModifierFlag::OPTION_L
    </autogen>
    <autogen>
      __KeyToKey__
      KeyCode::K, ModifierFlag::MODOPD,
      KeyCode::CURSOR_RIGHT, ModifierFlag::OPTION_L
    </autogen>
